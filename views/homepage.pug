doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Pets
        a(href="/add" class="add-button") Add a Pet
        .cards 
            each pet in data
                .card 
                    h2.card__name #{pet.properties.name}  #{pet.properties.breed}
                    p.card__email Age: #{pet.properties.age} | Weight: #{pet.properties.weight}